<div class="w-full max-w-xs mx-auto my-16">
  <form action="/auth/logout" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-center text-xl mb-6">Do you want to logout?</h2>
    <input type="hidden" name="authenticity_token" value='<%= session.string("csrf") %>'>
    <div class="flex flex-col">
      <input class="bg-emerald-500 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit" value="Yes, logout">
    </div>
  </form>
</div>